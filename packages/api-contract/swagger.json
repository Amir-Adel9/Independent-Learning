  "info": {
    "title": "LMS Auth API",
    "description": "This API uses httpOnly cookies for session management: the access_token cookie is sent with general authenticated requests, and the refresh_token cookie is used for token rotation (path-restricted to /api/auth/refresh). Login and register set both cookies; protected routes require the access_token cookie.",
    "version": "1.0",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "securitySchemes": {
      "cookie": {
        "type": "apiKey",
        "in": "cookie",
        "name": "refresh_token"
      }
    },
    "schemas": {
      "CreateCategoryDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 20
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "name"
        ]
      },
      "CategoryEntity": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string",
            "nullable": true
          }
        },
        "required": [
          "id",
          "name",
          "description"
        ]
      },
      "UpdateCategoryDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 20
          },
          "description": {
            "type": "string"
          }
        }
      },
      "RegisterDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@example.com"
          },
          "name": {
            "type": "string",
            "example": "John Doe",
            "minLength": 3
          },
          "password": {
            "type": "string",
            "example": "Password1!",
            "minLength": 8,
            "description": "Min 8 characters, at least one letter, one number, one special character"
          }
        },
        "required": [
          "email",
          "name",
          "password"
        ]
      },
      "AuthenticatedAdminEntity": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@example.com"
          },
          "name": {
            "type": "string",
            "example": "John Doe",
            "nullable": true
          },
          "role": {
            "type": "string",
            "enum": [
              "super_admin",
              "admin",
              "editor"
            ]
          }
        },
        "required": [
          "email",
          "name",
          "role"
        ]
      },
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "example": "your-password"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "AdminEntity": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "example": "admin@example.com"
          },
          "name": {
            "type": "string",
            "example": "Admin Name",
            "nullable": true
          },
          "role": {
            "type": "string",
            "enum": [
              "super_admin",
              "admin",
              "editor"
            ]
          },
          "isActive": {
            "type": "boolean"
          }
        },
        "required": [
          "id",
          "email",
          "name",
          "role",
          "isActive"
        ]
      },
      "CreateAdminDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "admin@example.com"
          },
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "minLength": 6
          },
          "role": {
            "type": "string",
            "enum": [
              "admin",
              "editor"
            ]
          },
          "isActive": {
            "type": "boolean"
          }
        },
        "required": [
          "email",
          "password",
          "role"
        ]
      },
      "UpdateAdminDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "admin@example.com"
          },
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "minLength": 6
          },
          "role": {
            "type": "string",
            "enum": [
              "admin",
              "editor"
            ]
          },
          "isActive": {
            "type": "boolean"
          }
        }
      }
    }
  }
}